    "features": [
      {
        "name": "Authentication",
        "description": "JWT-based authentication system with token management",
        "files": [
          "apps/web/src/app/api/auth/token/route.js",
          "apps/web/src/app/api/auth/change-password/route.js",
          "apps/web/src/app/api/auth/delete-account/route.js"
        ],
        "api_doc": {
          "openapi": "3.0.0",
          "paths": {
            "/api/auth/token": {
              "get": {
                "summary": "Get JWT token and user info",
                "responses": {
                  "200": {
                    "description": "Success",
                    "content": {
                      "application/json": {
                        "schema": {
                          "type": "object",
                          "properties": {
                            "jwt": {
                              "type": "string"
                            },
                            "user": {
                              "type": "object",
                              "properties": {
                                "id": {
                                  "type": "string"
                                },
                                "email": {
                                  "type": "string"
                                },
                                "name": {
                                  "type": "string"
                                }
                              }
                            }
                          }
                        }
                      }
                    }
                  },
                  "401": {
                    "description": "Unauthorized"
                  }
                }
              }
            }
          }
        }
      },
      {
        "name": "Products Management",
        "description": "CRUD operations for company products with HS codes and technical specifications",
        "files": [
          "apps/web/src/app/api/products/route.js"
        ],
        "api_doc": {
          "openapi": "3.0.0",
          "paths": {
            "/api/products": {
              "get": {
                "summary": "Get products by company ID",
                "parameters": [
                  {
                    "name": "company_id",
                    "in": "query",
                    "required": true,
                    "schema": {
                      "type": "string"
                    }
                  }
                ],
                "responses": {
                  "200": {
                    "description": "Success",
                    "content": {
                      "application/json": {
                        "schema": {
                          "type": "object",
                          "properties": {
                            "products": {
                              "type": "array",
                              "items": {
                                "type": "object"
                              }
                            }
                          }
                        }
                      }
                    }
                  },
                  "400": {
                    "description": "Company ID required"
                  }
                }
              },
              "post": {
                "summary": "Create new product",
                "requestBody": {
                  "content": {
                    "application/json": {
                      "schema": {
                        "type": "object",
                        "properties": {
                          "company_id": {
                            "type": "string"
                          },
                          "product_name": {
                            "type": "string"
                          },
                          "hs_code": {
                            "type": "string"
                          },
                          "category": {
                            "type": "string"
                          },
                          "material": {
                            "type": "string"
                          },
                          "technical_specs": {
                            "type": "string"
                          },
                          "unit_price": {
                            "type": "number"
                          },
                          "currency": {
                            "type": "string"
                          },
                          "description": {
                            "type": "string"
                          }
                        }
                      }
                    }
                  }
                },
                "responses": {
                  "200": {
                    "description": "Product created"
                  }
                }
              }
            }
          }
        }
      },
      {
        "name": "AI Predictions",
        "description": "AI-powered market forecasting, price trends, and demand predictions using GPT-4",
        "files": [
          "apps/web/src/app/api/ai-predictions/route.js"
        ],
        "api_doc": {
          "openapi": "3.0.0",
          "paths": {
            "/api/ai-predictions": {
              "get": {
                "summary": "Get AI predictions",
                "parameters": [
                  {
                    "name": "company_id",
                    "in": "query",
                    "required": true,
                    "schema": {
                      "type": "string"
                    }
                  },
                  {
                    "name": "type",
                    "in": "query",
                    "schema": {
                      "type": "string",
                      "enum": [
                        "market_forecast",
                        "price_trend",
                        "demand_prediction"
                      ]
                    }
                  },
                  {
                    "name": "period",
                    "in": "query",
                    "schema": {
                      "type": "string"
                    }
                  }
                ],
                "responses": {
                  "200": {
                    "description": "Success"
                  }
                }
              },
              "post": {
                "summary": "Create AI prediction",
                "requestBody": {
                  "content": {
                    "application/json": {
                      "schema": {
                        "type": "object",
                        "required": [
                          "company_id",
                          "prediction_type",
                          "period"
                        ],
                        "properties": {
                          "company_id": {
                            "type": "string"
                          },
                          "prediction_type": {
                            "type": "string"
                          },
                          "target_market": {
                            "type": "string"
                          },
                          "product_category": {
                            "type": "string"
                          },
                          "hs_code": {
                            "type": "string"
                          },
                          "period": {
                            "type": "string"
                          },
                          "market_data": {
                            "type": "object"
                          }
                        }
                      }
                    }
                  }
                },
                "responses": {
                  "200": {
                    "description": "Prediction created"
                  }
                }
              }
            }
          }
        }
